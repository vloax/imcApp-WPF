<Page x:Class="imcApp_WPF.Formularios.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:imcApp_WPF.Formularios"
      mc:Ignorable="d"
      Title="Menu" Height="740" Width="1320" WindowTitle="None">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="370"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,-93,0,326" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Image Source="pack://application:,,,/imcApp-WPF;component/img/V__1_-removebg-preview 1.png" Margin="476,42,474,10"/>
        <Image Source="pack://application:,,,/imcApp-WPF;component/img/png-removebg-preview__1__2__2_-removebg-preview.png" Margin="-242,211,509,0" Grid.RowSpan="3"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
            <StackPanel RenderTransformOrigin="0.417,1.667"/>
        </StackPanel>

        <StackPanel/>

        <TextBlock Text="Usuário" FontFamily="Poppins" FontSize="25" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Center" Margin="0,3,0,145"/>
        <TextBox x:Name="txtUsuario" Background="#D9D9D9" Width="297" Height="52" FontFamily="Poppins" FontWeight="Bold" FontSize="18" Padding="5,5,5,5" Margin="512,40,510,79" Grid.Row="1">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <TextBlock Text="Senha" FontFamily="Poppins" FontSize="25" FontWeight="Bold" Grid.Row="1"  HorizontalAlignment="Center" Margin="0,110,0,20"/>
        <TextBox  x:Name="txtSenha" Background="#D9D9D9" Width="297" Height="52" FontFamily="Poppins" FontWeight="Bold" FontSize="18" Padding="5,5,5,5" Margin="512,140,510,148" Grid.Row="1" Grid.RowSpan="2" >
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <StackPanel Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button x:Name="btnEntrar" Width="266" Height="53" Background="#6BBE7D" Content="ENTRAR" FontWeight="bold" FontFamily="Poppins" FontSize="32" Foreground="White" Click="btnCalcular_Click" Margin="0,60,0,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="23"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

    </Grid>
</Page>
